<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?language javascript?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="memStim.MainWindowController" fx:id="APMainWindow">
        <GridPane hgap="25.0" vgap="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="25.0" alignment="CENTER_LEFT">
            <Button styleClass="newGameBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="0" onMouseClicked="#handleNewGameBtn" fx:id="newGameBtn"/>
            <Button styleClass="highScoreBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="highScoreBtn"/>
            <Button styleClass="staticsBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="staticsBtn"/>
            <Button styleClass="settingsBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="3" fx:id="settingsBtn"/>
            <Button styleClass="fullscreenBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="4" fx:id="fullScreenBtn"/>
            <Button styleClass="changeUserBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="5" fx:id="changeUsernameBtn"/>
            <Button styleClass="exitBtn" stylesheets="@ButtonStyle.css" mnemonicParsing="false" GridPane.columnIndex="0" GridPane.rowIndex="6" fx:id="exitBtn"/>
            <fx:script>
                var tooltip = new javafx.scene.control.Tooltip('New game');
                javafx.scene.control.Tooltip.install(newGameBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip('High score');
                javafx.scene.control.Tooltip.install(highScoreBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip ('Statics');
                javafx.scene.control.Tooltip.install(staticsBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip ('Settings');
                javafx.scene.control.Tooltip.install(settingsBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip ('Fullscreen');
                javafx.scene.control.Tooltip.install(fullScreenBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip ('Change Username');
                javafx.scene.control.Tooltip.install(changeUsernameBtn, tooltip);
                tooltip = new javafx.scene.control.Tooltip ('Exit');
                javafx.scene.control.Tooltip.install(exitBtn, tooltip);
            </fx:script>
        </GridPane>
</AnchorPane>
